<!doctype html>
<html lang="is">
  <head>
    <meta charset="utf-8">
    <title>Einföld blómasíða</title>
    <link href="https://fonts.googleapis.com/css2?family=Montaga&family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/grid-overlay.css">
    <link rel="stylesheet" href="css/grid.css">
    <link rel="stylesheet" href="css/lightbox.min.css">
    <script src="node_modules/exif-js/exif.js"></script>
    <script type="module" src="js/scripts.js"></script>
    <script src="js/lightbox-plus-jquery.min.js"></script>
  </head>
  <body>
    <header>
      <div class="content">
        <h1>Blómagallerí</h1>
      </div>
    </header>

    <main>
      <div class="grid">
        <nav>
          <ul>
            <li><a href="index.ejs">Main</a></li>
            <li><a href="index.ejs">About</a></li>
            <li><a href="index.ejs">Album</a></li>
            <li><a href="index.ejs">Contact</a></li>
          </ul>
        </nav>
        <section class="flowers">
          <div class="row">
            <div class="gallery" id="galleri">  
            <% for (let i = 0; i < imageData.pictures.length; i++) { %>
              <div class="col col-3">
                <section class="flower">
                    <a href="img/<%= imageData.pictures[i].title %>" data-lightbox="mygallery" data-title="blóm">
                        <div class="image"><img src="img/<%= imageData.pictures[i].title %>" id="${folder+myndirFylki[i]}" alt="">
                        <span class="tooltiptext">Tooltip text.</span>
                        </div>
                    </a>
                    <p><%= imageData.pictures[i].description %></p>
                </section>
              </div>
            <% } %>  
            </div>
          </div>
        </section>
      </div>
    </main>
  </body>
</html>
